<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
           prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="pl.edu.agh.to2.cleaner.gui.presenter.FileChoosePresenter">
   <VBox>
      <HBox prefHeight="100.0" prefWidth="200.0"/>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <Button fx:id="directoryChooseButton" onAction="#chooseDirectory" mnemonicParsing="false" text="File">
         </Button>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <TextField fx:id="pathTextField"/>
            <Button fx:id="enterPathButton" onAction="#enterPath" mnemonicParsing="false"
                    text="Enter the path"/>
         </HBox>
         <VBox fx:id="checkBoxContainer" prefHeight="200.0" prefWidth="100.0"/>
         <!--                  <CheckBox fx:id="duplicateCheckbox" mnemonicParsing="false" text="Duplicate" />-->
         <!--                  <CheckBox fx:id="versionCheckbox" mnemonicParsing="false" text="Version" />-->
      </VBox>
      <Label fx:id="pathLabel" text="Empty path"/>
      <Label fx:id="errorLabel"/>
      <VBox prefHeight="200.0" prefWidth="200.0">
         <Label text="Logs:"/>
         <TextArea fx:id="logTextArea" editable="false" wrapText="true" prefHeight="100.0" />
      </VBox>
   </VBox>
   <Button fx:id="goSearchButton" mnemonicParsing="false" onAction="#goSearch" text="Search"/>
</StackPane>
